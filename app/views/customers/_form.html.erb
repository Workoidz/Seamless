  </div>

  <div class="form-row">
    <div class="col-4"><%= form.label :date_of_birth %> </div>
    <div class="col-4"><%= form.date_select :date_of_birth, start_year: 1900 %> </div>
  </div>

  <div class="form-row">
    <div class="col-4"><%= form.label :date_of_anniversary %></div>
    <div class="col-4"><%= form.date_select :date_of_anniversary, start_year: 1900 %> </div>
  </div>

  <div class="form-row">
    <div class="col"><%= form.label :profile %> :
    <%= form.text_field :profile , class: "form-control" %> 
  </div>
  </div>

