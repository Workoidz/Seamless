
<%= form_with(model: [@store,@customer,@order], local: true) do |form| %>

  <div class="container">
    <div class="row"><p><%= form.label :order_date %> : <%= form.date_select :order_date %><br></p></div>
    <div class="row">
      <div class="col-12 col-sm-6">
        <%= form.label :trail_date %> : <%= form.date_select :trail_date %><br>
        Status : <%= radio_button "order","trail_status","Not Done" %> Not Done <%= radio_button "order","trail_status","Done" %> Done
      </div>
      <div class="col-12 col-sm-6">
        <%= form.label :delivery_date %> : <%= form.date_select :delivery_date %><br>
        Status : <%= radio_button "order","delivery_status","Not Done" %> Not Done <%= radio_button "order","delivery_status","Done" %> Done
      </div>
    </div>
    <div class="row"><p><br><strong>Accounts :</strong></p></div>
    <div class="row">
      <div class="col-12 col-sm-6">
         <%= form.label :fabric_cost %> : <%= form.number_field :fabric_cost %><br>
         <%= form.label :fabric_advance %> : <%= form.number_field :fabric_advance %>
        
      </div>
      <div class="col-12 col-sm-6">

        <%= form.label :stitching_cost %> : <%= form.number_field :stitching_cost %><br>
        <%= form.label :stitching_advance %> : <%= form.number_field :stitching_advance %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
      <strong><%= form.label :balance_clear_status %></strong> : </div>
      <div class="col-3">
      <%= radio_button "order","balance_clear_status","Not Clear" %> Not Clear <%= radio_button "order","balance_clear_status","Clear" %> Clear</div> 
    </div>
    <div class="row"><p><br><%= form.label :remark %> : <%= form.text_area :remark %></p></div>
    
    <div class="row">
      <p>
        <div class="actions"><%= form.submit %>
      </p>
  </div>
    </div>

  </div>

<% end %>


