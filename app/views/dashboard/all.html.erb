<style type="text/css">
  .row{
    padding-left: 5px;
  }
  form {
    padding-bottom: 10px;
  }
  .order-view{
    border: 2px solid Black;
    margin: 5px;
  }
</style>

  <div class="container">
    <%= form_tag(dashboard_search_customer_path, :method => "get") do %>
        <%= label_tag(:search_customer, "Search for Customer (Mobile No.):") %>
        <%= text_field_tag(:search_customer) %>
        <%= submit_tag("Search") %>
    <% end %>

    <br>

    <%= form_tag(dashboard_search_order_path, :method => "get") do %>
        <%= label_tag(:search_order, "Search for Order ( Order No. ):") %>
        <%= text_field_tag(:search_order) %>
        <%= submit_tag("Search") %>
    <% end %>
  </div>
	
	<div class="container">
    <div class="row">
      <div class="col-8">
        <h4>All Orders</h4>
      </div>

      <div class="col-4">
          <div class="row"><h6><i>Trail's Done Today : </i><%=@trailed_today%></h6></div>
          <div class="row"><h6><i>Deliveries Done Today : </i> <%=@delivered_today%></h6></div>
      </div>
    </div>
  </div>

  <div class="container-fluid mt-5">
          <div class="row">
            <% @all.each do |order| %>
                <div class="col-sm-3 my-2">
                  <div class="card order-card">
                    <div class="card-header">
                      Order No : <%= order.id %>
                    </div>
                    <div class="card-body">
                      <p class="card-text"><b>Trails Date :</b> <%= order.trail_date %> </p>
                      <p class="card-text"><b>Status :</b> <%= order.trail_status %> </p>
                      <hr class="my-3">
                      <p class="card-text"><b>Delivery Date :</b> <%= order.delivery_date %></p>
                      <p class="card-text"><b>Status :</b> <%= order.delivery_status %> </p>
                      <a href="<%=store_customer_order_path(@store,Customer.find( order.customer_id),order)%>" class="btn btn-dark btn-sm">View Order</a>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>